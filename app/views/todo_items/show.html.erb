<h1><%=@todo_item.title%></h1>
<hr>

<p><%=@todo_item.description%></p>
<h3>Category: </h3><%=@todo_item.category.name%><br>
<h3>Due Day: </h3><%=@todo_item.day.name%><br><br>

<button><%= link_to 'Edit', edit_todo_item_path(@todo_item) %></button><br><br>


<form method="POST" action="/todo_items/<%=@todo_item.id%>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete">
</form><br><br><br>

<button><%= link_to "Delete", todo_item_path(@todo_item), method: :delete, data: { confirm: "Are you sure?" } %></button><br><br>


<button><%= link_to '<-- Go Back', todo_items_path(@todo_items) %></button><br><br>
